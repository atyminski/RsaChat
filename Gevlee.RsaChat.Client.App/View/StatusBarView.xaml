<UserControl x:Class="Gevlee.RsaChat.Client.App.View.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gevlee.RsaChat.Client.App.View"
			 xmlns:converters="clr-namespace:Gevlee.RsaChat.Client.App.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.Resources>
		<converters:BoolToColorConverter x:Key="BoolToColorConverter"></converters:BoolToColorConverter>
	</UserControl.Resources>
	<Grid>
		<StatusBar>
			<StatusBarItem>
				<Grid Width="295" DataContext="{Binding ServerConnectionStatus}">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="101*"/>
						<ColumnDefinition Width="20*"/>
						<ColumnDefinition Width="174*"/>
					</Grid.ColumnDefinitions>
					<TextBlock Text="Status połączenia:" Grid.ColumnSpan="1"></TextBlock>
					<Ellipse Height="10" Width="10" Grid.Column="1" Fill="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"></Ellipse>
				</Grid>
			</StatusBarItem>
		</StatusBar>
	</Grid>
</UserControl>
